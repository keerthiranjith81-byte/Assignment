<body>
  <h2>ðŸ•’ Current Session Time</h2>
  <p id="sessionTime"></p>

  <script>
    // Check if session time is already stored
    let sessionStart = sessionStorage.getItem("sessionStart");

    // If not stored, set current time as session start
    if (!sessionStart) {
      const now = new Date().toLocaleString(); // readable date/time
      sessionStorage.setItem("sessionStart", now);
      sessionStart = now;
    }

    // Display the stored session start time
    document.getElementById("sessionTime").textContent = 
      `Your current session started at: ${sessionStart}`;
  </script>
</body>
</html>